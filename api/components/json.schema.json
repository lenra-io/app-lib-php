{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://app.lenra.io/components/json.yml",
  "title": "JsonComponent",
  "description": "Any component",
  "oneOf": [
    {
      "$ref": "#/definitions/listener"
    }
  ],
  "definitions": {
    "listener": {
      "title": "Listener",
      "type": "object",
      "properties": {
        "_type": {
          "const": "listener"
        },
        "name": {
          "description": "The name of the listener to call",
          "type": "string",
          "pattern": "^(@lenra:)?[a-zA-Z_$][a-zA-Z_.$0-9]*$"
        },
        "props": {
          "$ref": "#/definitions/defs.props"
        }
      },
      "required": [
        "_type",
        "name"
      ],
      "additionalProperties": false
    },
    "defs.props": {
      "title": "Props",
      "description": "Parameters passed to the listener",
      "type": "object"
    }
  }
}